{
  "app_settings": {
    "default_mode": "generate",
    "auto_save_feedback": true,
    "show_advanced_options": false,
    "theme": "light",
    "language": "es",
    "max_text_length": 5000,
    "enable_auto_correct": true,
    "company_name": "Casa Limpia Colombia"
  },
  "ui_preferences": {
    "feedback_style": "inline",
    "result_display": "markdown",
    "auto_clear_input": false,
    "show_character_count": true,
    "enable_shortcuts": true,
    "show_company_branding": true,
    "minimal_interface": true
  },
  "ai_settings": {
    "api_provider": "simulation",
    "model": "gpt-3.5-turbo",
    "temperature": 0.7,
    "max_tokens": 1000,
    "timeout": 30,
    "use_company_context": true,
    "include_seasonal_messaging": true
  },
  "logging": {
    "enabled": true,
    "level": "INFO", 
    "file_path": ".logs/app.log",
    "max_file_size": "10MB",
    "log_user_interactions": true,
    "log_feedback": true
  },
  "security": {
    "enable_input_validation": true,
    "max_daily_requests": 1000,
    "enable_rate_limiting": false,
    "sanitize_output": true
  }
}
